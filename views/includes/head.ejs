  <link rel="stylesheet" href="/css/dasboard.css" />
  <% } else if (path === '/404' || path === '/500') { %>
  <link rel="stylesheet" href="/css/404.css" />
  <% }else{ %>
  <link rel="stylesheet" href="/css/styles.css" />
  <% } %>

  <title><%= pageTitle %></title>
