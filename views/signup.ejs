<!doctype html>
<html lang="en">

<%- include('./includes/head') %>

    <body class="rtl">

        <form class="form-signin" action="/user/signup" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">حساب کاربری را ایجاد کنید</h1>
            <%- include('./includes/validationMessages') %>
                <label for="inputEmail" class="sr-only">نام و نام خانوادگی</label>
                <input type="text" class="form-control" name="fullname" placeholder="نام و نام خانوادگی">
                <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="آدرس ایمیل">
                <label for="inputPassword" class="sr-only">شماره تماس</label>
                <input type="tel" id="inputPassword" name="phoneNumber" class="form-control" placeholder="شماره تماس">
                <label for="inputPassword" class="sr-only">رمزعبور</label>
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="رمزعبور">
                <label for="inputPassword" class="sr-only">تکرار رمزعبور</label>
                <input type="password" id="inputPassword" name="repassword" class="form-control"
                    placeholder="تکرار رمز عبور">
                <div class="checkbox mb-3">
                    <label>
                        <a href="/user/signin">حساب کاربری دارم</a>
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">ثبت نام</button>
        </form>

        <%- include('./includes/jssrcs') %>
    </body>

</html>